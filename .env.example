# Environment Variables Template
# Copy this to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Authentication
# IMPORTANT: Generate a strong, unique JWT secret for production
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
# IMPORTANT: Change this password for production
DB_PASSWORD=your-secure-database-password
DB_CONNECT_TIMEOUT=10000
DB_SSL_MODE=prefer

# NextAuth Configuration
NEXTAUTH_URL=your-nextauth-url
# IMPORTANT: Generate a strong, unique secret for NextAuth
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

DISCORD_CLIENT_ID=your-discord-client-id-here
DISCORD_CLIENT_SECRET=your-discord-client-secret-here

GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
